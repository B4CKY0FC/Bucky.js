{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    
    "outDir": "./dist",
    "rootDir": "./",
    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": ["node_modules", "dist"]
}